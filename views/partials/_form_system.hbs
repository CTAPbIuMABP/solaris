<div class="panel panel-default">
	<div class="panel-heading">planets</div>
	<div class="panel-body">
		<select class="form-control" name="scale" id="scale">
			<option value="1">inner</option>
			<option value="10">outer</option>
			<option value="35">full</option>
		</select>
		<label for="scale"></label>
	</div>
</div>

{{#each this}}
	<div class="panel panel-default" data-group="{{@key}}">
		<div class="panel-heading">{{@key}}</div>
		<div class="panel-body">
            {{#each this}}
				<div class="checkbox">
					<label for="{{this}}"><input type="checkbox" name="{{this}}" id="{{this}}"/>{{this}}</label>
				</div>
            {{/each}}
		</div>
	</div>
{{/each}}