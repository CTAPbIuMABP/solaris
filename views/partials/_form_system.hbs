<fieldset>
    <div class="panel panel-default">
    <legend class="panel-heading">scale</legend>
        <div class="panel-body">
        <select class="form-control" name="scale" id="scale">
        <option value="1">inner</option>
        <option value="10">outer</option>
        <option value="35">full</option>
    </select>
    <label for="scale"></label>
    </div>
   </div>
</fieldset>

{{#each this}}
	<fieldset data-group="{{@key}}">
        <div class="panel panel-default">
		<legend class="panel-heading">{{@key}}</legend>
        <div class="panel-body">
        {{#each this}}
			<div>
				<input type="checkbox" name="{{this}}" id="{{this}}"/>
				<label for="{{this}}">{{this}}</label>
			</div>
        {{/each}}
        </div>
        </div>
	</fieldset>
{{/each}}